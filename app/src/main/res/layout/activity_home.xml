<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/content_user_head_sdv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:placeholderImage="@mipmap/ic_launcher"
                app:roundAsCircle="true" />

            <Button
                android:id="@+id/open_suspend_window_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="打开悬浮窗" />
        </android.support.v7.widget.Toolbar>


        <ViewFlipper
            android:id="@+id/info_flipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:flipInterval="2000"
            android:inAnimation="@animator/anim_flipper_come_in"
            android:outAnimation="@animator/anim_flipper_get_out" />

        <FrameLayout
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.dell.fortune.tools.tab.BottomTabView
                android:id="@+id/home_category_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemTabName="每日更新"
                app:itemTabNoSelectIco="@drawable/ic_vec_tab_home_normal"
                app:itemTabSelectIco="@drawable/ic_vec_tab_home_press" />

            <com.dell.fortune.tools.tab.BottomTabView
                android:id="@+id/home_collection_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:itemTabName="我的收藏"
                app:itemTabNoSelectIco="@drawable/ic_vec_tab_collection_normal"
                app:itemTabSelectIco="@drawable/ic_vec_tab_collection_press" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/home_user_nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_home_user"
        app:menu="@menu/menu_home_user" />


</android.support.v4.widget.DrawerLayout>
