<resources>

    <!-- Base application theme. -->
    <style name="core_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/core_ui_yellow</item>
        <item name="colorPrimaryDark">@color/core_colorPrimaryDark</item>
        <item name="colorAccent">@color/core_colorAccent</item>
    </style>

    <!--全屏-->
    <style name="core_FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--全屏加透明-->
    <style name="core_TranslucentFullScreenTheme" parent="core_FullScreenTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--透明，有任务栏电量时间等-->
    <style name="core_NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="core_SmallDivider">
        <item name="android:background">@color/core_divider_deep</item>
        <item name="android:layout_height">@dimen/core_setting_divider</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="core_HeadDivider" parent="core_SmallDivider">
        <item name="android:layout_marginLeft">56dp</item>
    </style>

    <style name="core_BigDivider">
        <item name="android:background">@color/core_divider</item>
        <item name="android:layout_height">@dimen/core_setting_big_divider</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="core_transText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0000</item>
    </style>

    <style name="core_TextAppearance_TitleBar_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/core_colorTitle</item>
        <item name="android:background">@color/core_colorPrimary</item>
    </style>

    <style name="core_TextAppearance_TitleBar_subTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <!-- 左右文字样式 （和toolbar副标题样式一样，可自行修改）-->
    </style>

</resources>
