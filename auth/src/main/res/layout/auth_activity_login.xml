<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/core_include_appbar_toolbar" />

    <include layout="@layout/core_include_top_flag" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dell.fortune.tools.view.TextEdit
            android:id="@+id/account_tet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tools_itemIcoResource="@drawable/auth_ic_vec_email"
            app:tools_itemInputHint="请输入邮箱/Email" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dell.fortune.tools.view.TextEdit
                android:id="@+id/password_tet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tools_itemIcoResource="@drawable/auth_ic_vec_password"
                app:tools_itemInputHint="请输入密码/Password"
                app:tools_itemInputPassword="true" />

            <ImageView
                android:id="@+id/forget_password_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="32dp"
                app:srcCompat="@drawable/auth_ic_vec_forget_password" />
        </RelativeLayout>


        <TextView
            android:gravity="center"
            android:id="@+id/ok_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/core_shape_text_press"
            android:text="确定" />


        <TextView
            android:id="@+id/register_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="去注册>>"
            android:textColor="@color/core_colorAccent"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>